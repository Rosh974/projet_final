  <!--Style du bouton scroll back to top-->

  <style>
    a#cRetour {
      width: 55px;
      border-radius: 3px;
      padding: 10px;
      margin-bottom: 100px;
      font-size: 15px;
      text-align: center;
      color: rgba(255, 255, 255, 0.652);
      background: black;
      position: fixed;
      right: 59px;
      opacity: 1;
      z-index: 99999;
      transition: all ease-in 0.2s;
      backface-visibility: hidden;
      -webkit-backface-visibility: hidden;
      text-decoration: none;
    }

    a#cRetour:before {
      content: "\25b2";
    }

    a#cRetour:hover {
      background: #E83B0C;
      transition: all ease-in 0.2s;
    }

    a#cRetour.cInvisible {
      bottom: -35px;
      opacity: 0;
      transition: all ease-in 0.5s;
    }

    a#cRetour.cVisible {
      bottom: 20px;
      opacity: 1;
    }
  </style>

</head>

